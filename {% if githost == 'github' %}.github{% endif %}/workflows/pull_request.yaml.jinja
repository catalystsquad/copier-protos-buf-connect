name: Pull Request
on:
  pull_request:
    branches:
      - main
    paths:
      - '{{pkgdir}}/**'
      - 'buf.gen.yaml'
      - 'buf.work.yaml'
jobs:
  conventional-commits-pr:
    name: Validate Conventional Commits PR
    runs-on: ubuntu-latest
    steps:
      - uses: crazy-max/ghaction-dump-context@v1
      - uses: catalystsquad/action-validate-conventional-commits-pr@v1
  buf-lint:
    name: Buf Lint
    runs-on: ubuntu-latest
    steps:
      - uses: crazy-max/ghaction-dump-context@v1
      - uses: catalystsquad/action-buf@v1
        with:
{% raw %}
          buf-user: ${{ secrets.BUF_USER }}
          buf-token: ${{ secrets.BUF_TOKEN }}
          token: ${{ secrets.AUTOMATION_PAT }}
          generate: false
          breaking: false
          mod-prune: false
          mod-update: false
  buf-generate:
    name: Buf Generate
    runs-on: ubuntu-latest
    needs:
      - buf-lint
    steps:
      - uses: crazy-max/ghaction-dump-context@v1
      - uses: actions/checkout@v3
      - uses: catalystsquad/action-buf@v1
        with:
          buf-user: ${{ secrets.BUF_USER }}
          buf-token: ${{ secrets.BUF_TOKEN }}
          token: ${{ secrets.AUTOMATION_PAT }}
          lint: false
          breaking: false
  inject-tags:
    name: Inject Tags
    runs-on: ubuntu-latest
    needs:
      - buf-generate
    steps:
      - uses: crazy-max/ghaction-dump-context@v1
      - uses: actions/checkout@v3
      - uses: catalystsquad/action-protoc-go-inject-tag@v1
        with:
{% endraw %}
          files: gen/go/protos/{{apiversion}}/*.pb.go
          commit-message: injected tags
{% raw %}
  buf-breaking:
    name: Buf Breaking
    runs-on: ubuntu-latest
    needs:
      - buf-lint
      - buf-generate
    steps:
      - uses: crazy-max/ghaction-dump-context@v1
      - uses: catalystsquad/action-buf@v1
        with:
          buf-user: ${{ secrets.BUF_USER }}
          buf-token: ${{ secrets.BUF_TOKEN }}
          lint: false
          generate: false
          mod-prune: false
          mod-update: false
{% endraw %}
